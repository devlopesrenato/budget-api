// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AccountsPayable {
  id            Int       @id @default(autoincrement())
  description   String
  value         Float
  createdAt     DateTime? @default(now()) @db.Timestamptz(3)
  updatedAt     DateTime? @updatedAt @db.Timestamptz(3)
  createdBy     Users     @relation(fields: [creatorUserId], references: [id])
  creatorUserId Int
  sheet         Sheets    @relation(fields: [sheetId], references: [id])
  sheetId       Int

  @@map("accounts-payable")
}

model AccountsReceivable {
  id            Int       @id @default(autoincrement())
  description   String
  value         Float
  createdAt     DateTime? @default(now()) @db.Timestamptz(3)
  updatedAt     DateTime? @updatedAt @db.Timestamptz(3)
  createdBy     Users     @relation(fields: [creatorUserId], references: [id])
  creatorUserId Int
  sheet         Sheets    @relation(fields: [sheetId], references: [id])
  sheetId       Int

  @@map("accounts-receivable")
}

model Sheets {
  id                 Int                  @id @default(autoincrement())
  description        String               @unique
  createdAt          DateTime?            @default(now()) @db.Timestamptz(3)
  creatorUserId      Int
  createdBy          Users                @relation(fields: [creatorUserId], references: [id])
  updatedAt          DateTime?            @updatedAt @db.Timestamptz(3)
  accountsPayable    AccountsPayable[]
  accountsReceivable AccountsReceivable[]

  @@map("sheets")
}

model Users {
  id                        Int                  @id @default(autoincrement())
  email                     String               @unique
  name                      String
  password                  String
  emailValidated            Boolean
  emailValidatedAt          DateTime?
  createdAt                 DateTime?            @default(now()) @db.Timestamptz(3)
  updatedAt                 DateTime?            @updatedAt @db.Timestamptz(3)
  createdAccountsPayable    AccountsPayable[]
  createdAccountsReceivable AccountsReceivable[]
  sheets                    Sheets[]

  @@map("users")
}
