// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AccountsPayable {
  id            Int      @id @default(autoincrement())
  description   String
  value         Float
  createdAt     DateTime? @default(now())
  updatedAt     DateTime? @default(now()) @updatedAt
  createdBy     Users?   @relation("crAccountsPayable", fields: [creatorUserId], references: [id])
  creatorUserId Int?
  updatedBy     Users?   @relation("upAccountsPayable", fields: [updaterUserId], references: [id])
  updaterUserId Int?
  sheet         Sheets?  @relation(fields: [sheetId], references: [id])
  sheetId       Int?

  @@map("accounts-payable")
}

model AccountsReceivable {
  id            Int      @id @default(autoincrement())
  description   String
  value         Float
  createdAt     DateTime? @default(now())
  updatedAt     DateTime? @default(now()) @updatedAt
  createdBy     Users?   @relation("crAccountsReceivable", fields: [creatorUserId], references: [id])
  creatorUserId Int?
  updatedBy     Users?   @relation("upAccountsReceivable", fields: [updaterUserId], references: [id])
  updaterUserId Int?
  sheet         Sheets?  @relation(fields: [sheetId], references: [id])
  sheetId       Int?

  @@map("accounts-receivable")
}

model Sheets {
  id                 Int                  @id @default(autoincrement())
  description        String               @unique
  createdAt          DateTime?             @default(now())
  updatedAt          DateTime?             @default(now()) @updatedAt
  accountsPayable    AccountsPayable[]
  accountsReceivable AccountsReceivable[]

  @@map("sheets")
}

model Users {
  id                        Int                  @id @default(autoincrement())
  email                     String               @unique
  name                      String
  password                  String
  createdAt                 DateTime?             @default(now())
  updatedAt                 DateTime?             @default(now()) @updatedAt
  createdAccountsPayable    AccountsPayable[]    @relation("crAccountsPayable")
  updatedAccountsPayable    AccountsPayable[]    @relation("upAccountsPayable")
  createdAccountsReceivable AccountsReceivable[] @relation("crAccountsReceivable")
  updatedAccountsReceivable AccountsReceivable[] @relation("upAccountsReceivable")

  @@map("users")
}
